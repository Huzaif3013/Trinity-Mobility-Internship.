import pandas as pd
import numpy as np
from statsmodels.tsa.holtwinters import ExponentialSmoothing
import matplotlib.pyplot as plt
from google.colab import drive
drive.mount('/content/drive')
data = pd.read_csv("/continuous dataset.csv")
data['datetime'] = pd.to_datetime(data['datetime'])
data.set_index('datetime', inplace=True)
data['nat_demand'].plot(title = "electricity over time")
plt.show()
train = data.iloc[:30]
test = data.iloc[:30]
model = ExponentialSmoothing(
    train['nat_demand'],
    trend='add',
    seasonal = 'add',
    seasonal_periods=7
    )
hw_model = model.fit()
forecast = hw_model.forecast(steps = 30)
plt.figure(figsize=(10,5))
plt.plot(train.index, train['nat_demand'], label='Train')
plt.plot(test.index, test['nat_demand'], label='Actual')
plt.plot(forecast.index, forecast, label='Forecast')
plt.legend()
plt.title("Electricity Demand Forecasting")
plt.show()
